local WindUI = loadstring(game:HttpGet("https://github.com/Footagesus/WindUI/releases/latest/download/main.lua"))()
local Players, RunService, Camera, LocalPlayer, ReplicatedStorage =
    game:GetService("Players"),
    game:GetService("RunService"),
    workspace.CurrentCamera,
    game.Players.LocalPlayer,
    game:GetService("ReplicatedStorage")

local Window = WindUI:CreateWindow({
    Title = "Kaiju Hub | Pvp",
    Icon = "gitlab",
    Author = "My Kaiju | BlockSpin | i love You :D !",
    Folder = "XINCOHubFolder",
    Size = UDim2.fromOffset(400, 350),
    Theme = "Dark",
    Transparent = true,
    Resizable = true,
})

Window:Tag({
    Title = "PAID",
    Icon = "lock-keyhole",
    Color = Color3.fromHex("#90C6FC"),
    Radius = 13,
})

Window:Tag({
    Title = "v0.5.8",
    Color = Color3.fromHex("#2889F7"),
    Radius = 13,
})

Window:EditOpenButton({
    Title = "Kaiju Hub",
    Icon = "circle-ellipsis",
    CornerRadius = UDim.new(0,50),
    StrokeThickness = 3,
    Color = ColorSequence.new(
        Color3.fromHex("292DFF"), 
        Color3.fromHex("6E6BFF")
    ),
    OnlyMobile = false,
    Enabled = true,
    Draggable = true,
})

local CombatTab = Window:Tab({Title = "COMBAT:", Icon = "crosshair"})
CombatTab:Section({Title="GUN :"})
local CheaterTab = Window:Tab({Title = "CHEATER:", Icon = "user"})
CheaterTab:Section({Title="CHEATER :"})
local MiscTab = Window:Tab({Title = "MISC:", Icon = "warehouse"})
MiscTab:Section({Title="Misc :"})
local EspTab = Window:Tab({Title = "Esp", Icon = "user"})
EspTab:Section({Title="Esp PLAYER  :"})
local WeaponTab = Window:Tab({Title = "Weapon Mods:", Icon = "crosshair"})
WeaponTab:Section({Title="Weapon Mods :"})
local ServerTab = Window:Tab({Title = "Server", Icon = "server"})
ServerTab:Section({Title="Server Hop  :"})
local SettingsTab = Window:Tab({Title = "Settings", Icon = "settings"})
SettingsTab:Section({Title="Settings  :"})

SettingsTab:Button({
    Title = "Save Config",
    Callback = function()
        if saveFunc then
            saveFunc(myConfig)
        end
    end
})

SettingsTab:Button({
    Title = "Delete Config",
    Callback = function()
        if deleteFunc then
            deleteFunc(myConfig)
        end
    end
})

-- ‡∏™‡∏£‡πâ‡∏≤‡∏á‡∏õ‡∏∏‡πà‡∏° Save Config ‡πÅ‡∏•‡∏∞ Delete Config
CombatTab:Space()

-- Save Config
CombatTab:Button({
    Title = "Save Config",
    Callback = function()
        if myConfig and myConfig.Save then
            myConfig:Save()
            print("üíæ Config saved!")
        end
    end
})

-- Delete Config
CombatTab:Button({
    Title = "Delete Config",
    Callback = function()
        if myConfig and myConfig.Delete then
            myConfig:Delete()
            print("üóë Config deleted!")
        end
    end
})

-- ‡∏ï‡∏±‡∏ß‡∏≠‡∏¢‡πà‡∏≤‡∏á‡∏Å‡∏≤‡∏£ Register ‡∏Ñ‡πà‡∏≤‡∏Å‡∏±‡∏ö Config (‡∏ï‡πâ‡∏≠‡∏á‡∏ó‡∏≥‡∏´‡∏•‡∏±‡∏á‡∏™‡∏£‡πâ‡∏≤‡∏á UI ‡∏ó‡∏∏‡∏Å‡∏ï‡∏±‡∏ß)
if myConfig then
    myConfig:Register("SilentAim", SilentAimEnabledValue)
    myConfig:Register("AttackAntiLock", AttackAntiLockEnabledValue)
    myConfig:Register("AttackAntiKill", AttackAntiKillEnabledValue)
    myConfig:Register("FOVRadius", FOVRadiusValue)
    myConfig:Register("LockDistance", LockDistanceValue)
    myConfig:Register("TargetPart", TargetPartValue)
    myConfig:Register("MagicBullet", MagicBulletValue)
    myConfig:Register("SafePlayers", safePlayersDropdown)
end
