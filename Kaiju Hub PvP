local safePlayersDropdown = CombatTab:Dropdown({
    Title = "Safe Players",
    Multi = true,
    AllowNone = true,
    Values = UpdatePlayerNames(),
    Value = IgnorePlayers,
    Callback = function(selected)
        IgnorePlayers = {}
        for _, name in ipairs(selected) do
            table.insert(IgnorePlayers, name)
        end
        myConfig:Register("SafePlayers", safePlayersDropdown)
    end
})
local savedSafe = myConfig:Load("SafePlayers")
if savedSafe then safePlayersDropdown:Set(savedSafe.Value) end

